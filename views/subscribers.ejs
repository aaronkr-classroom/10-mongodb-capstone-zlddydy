<!-- views/subscribers.ejs -->

<!--
  Listing 16.5 (p. 232)
  구독자 목록을 보여주는 뷰
-->

<main class="">
  <div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="pt-5">
      <h1>Subscribers</h1>
      <p>Here are all the subscribers to our newsletter.</p>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Newsletter?</th>
          </tr>
        </thead>
        <tbody>
          <% subscribers.forEach((s, i) => { %>
            <tr>
            <td><%= i+1 %></td>
            <td><%= s.name %></td>
            <td><%= s.email %></td>
            <td>
              <% if (s.newsletter) { %>
                <span class=""fas fa-check">O</span>
              <% }else { %>
                <span class=""fas fa-check">X</span>
              <% } %>
            </td>
          </tr>
            <% }); %>
        </tbody>
      </table>

      <div class="mt-5 text-center">
        <a href="/" class="btn ut-red">Delete All Subscribers</a>
      </div>
    </div>
  </div>
</main>
